#!/bin/bash
export MIX_ENV=dev

# If in the Scripts directory, move up one level
if ! [ -d "scripts" ]; then
  cd ..
fi

# Create the mnesia directory structure if it doesn't exist
if ! [ -d ".mnesia" ]; then
  mkdir .mnesia
fi
cd .mnesia
if ! [ -d $MIX_ENV ]; then
  mkdir $MIX_ENV
fi
cd ..

# Start the Elixir application
iex -S mix phx.server
