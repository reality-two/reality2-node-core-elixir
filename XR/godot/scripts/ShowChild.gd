# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Show one of the children
# ------------------------------------------------------------------------------------------------------------------------------------------------------

extends Node

# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Show the child with the given index, and return a link if it exists, or null otherwise
# ------------------------------------------------------------------------------------------------------------------------------------------------------
func show_child(index):
	var children = get_children()
	var counter = 0
	var which_child = null
	for child in children:
		if (index == counter):
			_setVisibility(child, true)
			which_child = child
		else:
			_setVisibility(child, false)
		counter = counter + 1
	return which_child
# ------------------------------------------------------------------------------------------------------------------------------------------------------



# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Show the child with the given name, and return a link if it exists, or null otherwise
# ------------------------------------------------------------------------------------------------------------------------------------------------------
func show_child_by_name(the_name):
	var children = get_children()
	var which_child = null
	for child in children:
		if (child.name == the_name):
			_setVisibility(child, true)
			which_child = child
		else:
			_setVisibility(child, false)
	return which_child
# ------------------------------------------------------------------------------------------------------------------------------------------------------



# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Return the child named, or null if one with that name doesn't exist
# ------------------------------------------------------------------------------------------------------------------------------------------------------
func get_child_by_name(the_name):
	var children = get_children()
	var which_child = null
	for child in children:
		if (child.name == the_name):
			which_child = child
	return which_child	
# ------------------------------------------------------------------------------------------------------------------------------------------------------



# ------------------------------------------------------------------------------------------------------------------------------------------------------
# Set the visibility and activity of a node and all its children.
# ------------------------------------------------------------------------------------------------------------------------------------------------------
func _setVisibility(node: Node, visible: bool):
	node.visible = visible
	node.set_process(visible)
	for child in node.get_children():
		_setVisibility(child, visible)
# ------------------------------------------------------------------------------------------------------------------------------------------------------
